{
  // VS Code
  "editor.renderWhitespace": "all",

  // Language: Ruby
  "[ruby]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.autoIndent": "full",
    "files.trimTrailingWhitespace": true
  },

  // Extension: Code Spell Checker
  "cSpell.language": "en,de",
  "cSpell.ignorePaths": [
    "**/**.code-workspace",
    "**/Gemfile",
    "**/Gemfile.lock",
    "**/package-lock.json",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/objects/**",
    ".vscode",
    ".vscode-insiders"
  ],
  "cSpell.words": [
    "Huuums",
    "jekyll",
    "Karg",
    "KargWare",
    "Nicolas",
    "Rakefile",
    "Struct"
  ],

  // Extension: Folder Templates
  "folderTemplates.structures": {
    "omitParentDirectory": true
  }
}